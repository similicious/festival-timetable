---
import "@app/styles/global.css";
import Navigation from "@app/components/Navigation.astro";
import * as festival from "@app/data/festival.md";
interface Props {
  title?: string;
}

const festivalName = festival.frontmatter.name;
const title = Astro.props.title;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | ` : ""}{festivalName}</title>
  </head>
  <body class="bg-zinc-800 text-zinc-200">
    <div class="">
      <nav class="fixed top-0 bottom-0 left-0 w-18 bg-zinc-700 pl-1">
        <Navigation />
      </nav>

      <main class="ml-18 p-4">
        <slot />
      </main>
    </div>
  </body>
</html>
